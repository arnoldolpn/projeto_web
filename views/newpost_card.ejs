<div class="card mb-3" style="max-width: 540px;">
        <div class="row no-gutters">
          <div class="col-md-4">
            <img src="/images/<%= poste.image %>" class="card-img" alt="...">
          </div>
          <div class="col-md-8">
            <div class="card-body">
              <h5 class="card-title">
                <%= poste.title %>
              </h5>
              <p class="card-text">
                <%= poste.description %>
              </p>
              <a href="/posts/<%= poste.id %>" class="btn btn-primary">Ver Detalhes</a>
            </div>
          </div>
        </div>
      </div>